@model SmartTaxi.Web.Models.ViewModels.FinalizeBookingViewModel

<div class="row">
    <h2 class="text-center">Zavrsi voznju</h2>
    @using (Html.BeginForm("FinalizePost", "Booking", FormMethod.Post))
    {
        <div class="form-group ">
            @Html.LabelFor(model => model.BookingStatus)
            <select>
                <option value="value">Uspesna</option>
                <option value="value">Neuspesna</option>
            </select>
        </div>

        <div class="form-group ">
            @Html.LabelFor(mpdel => Model.Amount)
            @Html.TextAreaFor(model => model.Amount, new { @class = "form-control", rows = 5 })
            @Html.ValidationMessageFor(model => model.Amount)
        </div>


        <div class="form-group ">
            <label for="Reason">Razlog otkazivanja</label>
            @Html.TextAreaFor(model => model.CancelReasonDescription, new { @class = "form-control", rows = 5 })
            @Html.ValidationMessageFor(model => model.CancelReasonDescription)
        </div>
        <div class="mt-4">
            <button type="submit" class="btn btn-danger btn-block">
                <i class="fas fa-times-circle"></i>
                Otkazi voznju
            </button>
        </div>
    }
</div>