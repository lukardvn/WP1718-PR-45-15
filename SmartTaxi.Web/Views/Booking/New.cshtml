@using SmartTaxi.Web.Domain
@using SmartTaxi.Web.Domain.Enums
@model Booking

@{ ViewBag.Title = "Nova voznja"; }

<h2 class="text-center pt-4 pb-4">Kreiraj novu voznju</h2>
<div class="new-booking row">
    <div class="col-md-6 offset-md-3">
        @using (Html.BeginForm("NewBookingPost", "Booking", FormMethod.Post))
        {
            <div class="pickup-location">
                <div class="pt-2 pb-2">
                    <h3><i class="fas fa-map-marker-alt"></i> Pocetna lokacija</h3>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-8">
                        @Html.LabelFor(model => model.PickUpLocation.Address.Street)
                        @Html.TextBoxFor(model => model.PickUpLocation.Address.Street, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.PickUpLocation.Address.Street)
                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.PickUpLocation.Address.Number)
                        @Html.TextBoxFor(model => model.PickUpLocation.Address.Number, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.PickUpLocation.Address.Number)
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-8">
                        @Html.LabelFor(model => model.PickUpLocation.Address.City)
                        @Html.TextBoxFor(model => model.PickUpLocation.Address.City, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.PickUpLocation.Address.City)
                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.PickUpLocation.Address.ZipCode)
                        @Html.TextBoxFor(model => model.PickUpLocation.Address.ZipCode, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.PickUpLocation.Address.ZipCode)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <i class="fas fa-taxi"></i>
                @Html.LabelFor(model => model.VehicleType)
                @{
                    IList<SelectListItem> list = Enum.GetValues(typeof(VehicleType))
                        .Cast<VehicleType>()
                        .Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() })
                        .ToList();
                    SelectList data = new SelectList(list, "Value", "Text");
                }
                @Html.DropDownList("vehicleType", data, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="drivers"><i class="fas fa-user-tie"></i> Vozac</label>
                <select class="form-control" id="drivers">
                    <option>Dejan Petrovic</option>
                    <option>Ivan Mihajlovic</option>
                    <option>Marko Stojanovic</option>
                </select>
            </div>
            <div class="mt-4">
                <button type="submit" class="btn btn-primary btn-block">
                    <i class="fas fa-save"></i>
                    Sacuvaj
                </button>
            </div>
        }
    </div>
</div>