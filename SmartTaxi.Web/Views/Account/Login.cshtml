@using SmartTaxi.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="container">
    <h2 class="text-center m-4">@ViewBag.Title.</h2>
    <hr />
    <div class="row">
        
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "col-md-4 offset-md-4 p-3", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default btn-block">Log in</button>
            </div>
            <div>
                <p>@Html.ActionLink("Registrujte se kao novi korisnik", "Register")</p>    
            </div>
        }
        
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}